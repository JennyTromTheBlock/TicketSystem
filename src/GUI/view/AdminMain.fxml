<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane fx:id="background" prefHeight="800.0" prefWidth="1315.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="GUI.controller.AdminMain">
    <top>
        <HBox fx:id="topBar" alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="200.0" spacing="20.0" BorderPane.alignment="CENTER_LEFT">
            <children>
                <ImageView fx:id="ivLogo" fitHeight="60.0" fitWidth="210.0" pickOnBounds="true" preserveRatio="true">
                    <HBox.margin>
                        <Insets left="20.0" />
                    </HBox.margin>
                </ImageView>
                <Separator maxHeight="-Infinity" orientation="VERTICAL" prefHeight="36.0" />
                <MenuButton fx:id="mbFilter" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="46.0" prefWidth="139.0" text="Filter">
                    <items>
                        <CheckMenuItem fx:id="cmiUpcoming" mnemonicParsing="false" text="Show upcoming events only" />
                        <CheckMenuItem fx:id="cmiHistoric" mnemonicParsing="false" text="Show historic events only" />
                        <CheckMenuItem mnemonicParsing="false" text="Show my events only" />
                    </items></MenuButton>
                <HBox alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="50.0" spacing="15.0">
                    <children>
                        <ImageView fx:id="ivCalendar" fitHeight="40.0" fitWidth="40.0" onMouseClicked="#calendarViewBtn" pickOnBounds="true" preserveRatio="true" />
                        <ImageView fx:id="ivList" fitHeight="40.0" fitWidth="40.0" layoutX="10.0" layoutY="10.0" onMouseClicked="#listViewBtn" pickOnBounds="true" preserveRatio="true" />
                    </children>
                    <HBox.margin>
                        <Insets right="20.0" />
                    </HBox.margin>
                </HBox>
                <Pane prefHeight="60.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                <HBox fx:id="hBoxSearch" alignment="CENTER" maxHeight="-Infinity" prefHeight="35.0" prefWidth="290.0" spacing="5.0">
                    <children>
                        <TextField fx:id="txtSearch" prefHeight="26.0" prefWidth="239.0" promptText="search" />
                        <ImageView fx:id="ivSearchBtn" fitHeight="20.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true" />
                    </children>
                </HBox>
                <HBox alignment="CENTER" prefHeight="60.0" prefWidth="235.0" spacing="5.0">
                    <children>
                        <Label alignment="CENTER_RIGHT" prefHeight="60.0" prefWidth="129.0" text="User Name">
                            <HBox.margin>
                                <Insets right="10.0" />
                            </HBox.margin></Label>
                        <MenuButton mnemonicParsing="false" prefHeight="27.0" prefWidth="86.0" text="Settings" />
                    </children>
                    <HBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </HBox.margin>
                </HBox>
            </children>
        </HBox>
    </top>
    <center>
        <VBox fx:id="contentArea" prefHeight="200.0" prefWidth="100.0" spacing="10.0" BorderPane.alignment="CENTER">
            <children>
                <HBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="1065.0">
                    <children>
                        <Pane prefHeight="83.0" prefWidth="10.0" HBox.hgrow="ALWAYS" />
                    </children></HBox>
                <TableView fx:id="tvEvents" prefHeight="800.0" prefWidth="200.0">
                    <columns>
                        <TableColumn fx:id="tcTitle" prefWidth="249.5" text="Title" />
                        <TableColumn fx:id="tcLocation" prefWidth="202.5" text="Location" />
                        <TableColumn fx:id="tcMaxParticipants" prefWidth="118.5" text="Max participants" />
                        <TableColumn fx:id="tcPrice" prefWidth="98.0" text="Price" />
                        <TableColumn fx:id="tcDate" prefWidth="201.0" text="Date" />
                    </columns>
                </TableView>
                <Pane prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
                <HBox alignment="CENTER_LEFT" prefHeight="110.0" prefWidth="890.0" spacing="30.0">
                    <children>
                        <Button fx:id="btnCreateEvent" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleCreateUser" prefHeight="90.0" prefWidth="270.0" text="Create User">
                            <font>
                                <Font name="Berlin Sans FB" size="36.0" />
                            </font>
                        </Button>
                        <Button fx:id="btnSeeEvents" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleSeeEvents" prefHeight="90.0" prefWidth="270.0" text="See Events">
                            <font>
                                <Font name="Berlin Sans FB" size="36.0" />
                            </font>
                        </Button>
                  <Button fx:id="btnSeeUsers" layoutX="311.0" layoutY="10.0" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" mnemonicParsing="false" onAction="#handleSeeUsers" prefHeight="90.0" prefWidth="270.0" text="See Users">
                     <font>
                        <Font name="Berlin Sans FB" size="36.0" />
                     </font>
                  </Button>
                    </children>
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin>
                </HBox>
            </children>
            <BorderPane.margin>
                <Insets left="15.0" right="15.0" top="10.0" />
            </BorderPane.margin>
        </VBox>
    </center>
    <right>
        <VBox fx:id="sidebar" alignment="CENTER" prefHeight="730.0" prefWidth="394.0" spacing="50.0" BorderPane.alignment="CENTER">
            <children>
                <Separator prefWidth="200.0" visible="false">
                    <VBox.margin>
                        <Insets bottom="20.0" />
                    </VBox.margin></Separator>
                <Label fx:id="lblTitle" alignment="CENTER" prefHeight="50.0" prefWidth="422.0" text="Title">
                    <font>
                        <Font name="Berlin Sans FB" size="18.0" />
                    </font>
                </Label>
                <Label fx:id="lblDate" alignment="CENTER" prefHeight="62.0" prefWidth="394.0" text="date" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="16.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="20.0" right="20.0" />
                    </VBox.margin>
                </Label>
                <Label fx:id="lblLocation" alignment="CENTER" layoutX="30.0" layoutY="229.0" prefHeight="62.0" prefWidth="394.0" text="location" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="16.0" />
                    </font>
                </Label>
                <Label fx:id="lblPrice" alignment="CENTER" layoutX="10.0" layoutY="342.0" prefHeight="62.0" prefWidth="394.0" text="Price" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="16.0" />
                    </font>
                </Label>
                <Label fx:id="lblTicketsLeft" alignment="CENTER" prefHeight="62.0" prefWidth="428.0" text="Free Tickets" wrapText="true">
                    <font>
                        <Font name="Berlin Sans FB" size="16.0" />
                    </font>
                </Label>
                <Pane prefHeight="63.0" prefWidth="250.0" VBox.vgrow="ALWAYS" />
                <VBox alignment="CENTER">
                    <children>
                        <HBox alignment="CENTER" prefHeight="65.0" prefWidth="394.0" spacing="40.0">
                            <VBox.margin>
                                <Insets bottom="15.0" />
                            </VBox.margin>
                            <children>
                                <Button mnemonicParsing="false" onAction="#handleViewInfo" text="View Info" />
                                <Button mnemonicParsing="false" onAction="#handleEditEvent" text="Edit Event" />
                            </children>
                        </HBox>
                    </children>
                </VBox>
            </children>
            <BorderPane.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </BorderPane.margin></VBox>
    </right>
</BorderPane>
